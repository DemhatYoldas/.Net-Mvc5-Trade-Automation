@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th> Ürün </th>
            <th> Cari </th>
            <th> Personel </th>
            <th> Adet </th>
            <th> Fiyat </th>
            <th> Toplam </th>
            <th> Tarih </th>
            <th> Güncelle </th>
            <th> Detaylar </th>
        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tbody>
            <tr>
                <td>@p.SatisID</td>
                <td>@p.Urun.UrunAd</td>
                <td>@p.Cariler.CariAd @p.Cariler.CariSoyad</td>
                <td>@p.Personel.PersonelAd @p.Personel.PersonelSoyad</td>
                <td>@p.Adet</td>
                <td>@p.Fiyat</td>
                <td>@p.ToplamTutar</td>
                <td>@p.Tarih</td>
                @*<td><a href="/Personel/PersonelSil/@p.SatisID" class="btn btn-danger">Sil</a></td>*@
                <td><a href="/Satis/SatisGetir/@p.SatisID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@p.SatisID" class="btn btn-outline-secondary">Detaylar</a></td>
            </tr>
        </tbody>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>


<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


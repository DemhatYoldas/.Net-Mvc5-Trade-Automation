@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th> Ürün </th>
        <th> Cari </th>
        <th> Personel </th>
        <th> Adet </th>
        <th> Fiyat </th>
        <th> Toplam </th>
        <th> Tarih </th>
        <th> Güncelle </th>
        <th> Detaylar </th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.SatisID</td>
            <td>@p.Urun.UrunAd</td>
            <td>@p.Cariler.CariAd @p.Cariler.CariSoyad</td>
            <td>@p.Personel.PersonelAd @p.Personel.PersonelSoyad</td>
            <td>@p.Adet</td>
            <td>@p.Fiyat</td>
            <td>@p.ToplamTutar</td>
            <td>@p.Tarih</td>
            @*<td><a href="/Personel/PersonelSil/@p.SatisID" class="btn btn-danger">Sil</a></td>*@
            <td><a href="/Personel/PersonelGetir/@p.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@p.SatisID" class="btn btn-outline-secondary">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

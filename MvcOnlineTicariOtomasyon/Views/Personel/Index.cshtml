@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th> Personel Adı </th>
        <th> Personel Soyadı  </th>
        <th> Görsel </th>
        <th> Departman </th>
        <th> Sil </th>
        <th> Güncelle </th>
        <th> Satışlar </th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.PersonelID</td>
            <td>@p.PersonelAd</td>
            <td>@p.PersonelSoyad</td>
            <td><img src="@p.PersonelGorsel" class="img-circle img-fluid" width="100px" height="100px"/></td>
            <td>@p.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelSil/@p.PersonelID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@p.PersonelID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@p.PersonelID" class="btn btn-outline-secondary">Satışlar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>

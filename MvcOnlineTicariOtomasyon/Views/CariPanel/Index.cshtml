@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Mvc Online Ticari Otomasyon Cari Bilgi Paneli</h2>

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{

        <table class="table table-hover">
            <tr>
                <td><lable>Adı : </lable>@Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td><lable>Soyadı : </lable>@Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td><lable>Şehir : </lable>@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>
                    @*//sisteme giren kullanıcını kimlik bilgisini taşısın*@
                    <label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label>
                </td>
            </tr>
            <tr>
                <td><lable>Durum : </lable>@Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td><lable>Şifre : </lable>@Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
            </tr>
        </table>
        <button class="btn btn-warning">Bilgilerimi Güncelle</button>

}

@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Fatura</h2>
<br />
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        @*<th>ID</th>*@
        <th> Fatura Seri / Fatura Sıra No </th>
        @*<th> Fatura Sıra No </th>*@
        <th> Tarih </th>
        @*<th> Vergi Dairesi </th>*@
        <th> Saat </th>
        @*<th> Teslim Eden </th>c*@
        @*<th> Teslim Alan </th>*@
        <th> Toplam  </th>
        <th> Güncelle </th>
        <th> Detaylar </th>
        <th> Yeni Kalem </th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            @*<td>@k.FaturaID</td>*@
            <td>@k.FaturaSeriNo / @k.FaturaSıraNo</td>
            @*<td></td>*@
            <td>@k.Tarih</td>
            @*<td>@k.VergiDairesi</td>*@
            <td>@k.Saat</td>
            @*<td>@k.TeslimEden</td>*@
            @*<td>@k.TeslimAlan</td>*@
            <td>@k.Toplam ₺</td>

            <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-warning">Güncelle</a></td>

            <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-outline-secondary">Detaylar</a></td>

            <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-outline-danger">Kalem</a></td>
        </tr>
    }
    <tr>
    </tr>

</table>
<a href="/Fatura/FaturaEkle" class="btn btn-success">Yeni Fatura Girişi</a>
<br />
<br />

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Popup Penceresi
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Fatura</h1>

            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }

                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>



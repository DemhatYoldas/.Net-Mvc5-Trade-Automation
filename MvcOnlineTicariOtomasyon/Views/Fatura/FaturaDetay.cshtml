@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı : @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th> ID</th>
        <th> Açıklama </th>
        <th> Miktar  </th>
        <th> Birim Fİyat </th>
        <th> Tutar </th>
    </tr>
    @foreach (var d in Model)
    {

        <tr>
            <td>@d.FaturaKalemID</td>
            <td>@d.Aciklama</td>
            <td>@d.Miktar</td>
            <td>@d.BirimFiyat</td>
            <td>@d.Tutar</td>
        </tr>
    }
    <tr>
    </tr>
</table>

<a href="/Fatura/YeniKalem/" class="btn btn-info">Yeni Kalem Girişi</a>


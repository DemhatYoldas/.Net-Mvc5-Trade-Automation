@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @*// sıra numarası vermek için*@
                @{int sirano = 0; }
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@p.marka</td>
                        <td>
                            @if (p.sayi >= 1 && p.sayi <=3 )
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 35%"></div>
                                </div>
                            }

                            @if (p.sayi >= 4 && p.sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 35%"></div>
                                </div>
                            }

                            @if (p.sayi >= 7 )
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }
                        </td>
                        @if (p.sayi >= 1 && p.sayi <= 3)
                        {
                            <td><span class="badge bg-danger">@p.sayi</span></td>
                        }
                        @if (p.sayi >= 4 && p.sayi <= 6)
                        {
                            <td><span class="badge bg-warning">@p.sayi</span></td>
                        }
                        @if (p.sayi >= 7)
                        {
                            <td><span class="badge bg-warning">@p.sayi</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>